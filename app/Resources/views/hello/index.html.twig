  {% block body %}
    <div class="container">
      <div class="row">
      <div class="col-sm-4">
      {{ form_start(form) }}
      {{form_row(form.title)}}
      {{form_row(form.text)}}
      {{form_row(form.number)}}
      {{form_row(form.save, {'attr': {'class': 'btn btn-success'}})}}
    <!-- {{ form_widget(form) }} -->
    {{ form_end(form) }}
    </div>
  
<div class="col-sm-8">
  <table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>ID</th>
      <th>title</th>
      <th>text</th>
      <th>nubmer</th>
      <th>delete</th>
      <th>update</th>
    </tr>
  </thead>
  <tbody>
  {%for article in articles %}
    <tr class="success">
      <td>{{article.id}}</td>
      <td>{{article.title}}</td>
      <td>{{article.text}}</td>
      <td>{{article.number}}</td>
      <td><a href="/delete/{{article.id}}">delete</a></td>
      <td><a href="/show/{{article.id}}">update</a></td>
    </tr>
    {%endfor%}  
  </tbody>
  </table>
  {# display navigation #}
  <div class="navigation">
      {{ knp_pagination_render(articles) }}
  </div>
